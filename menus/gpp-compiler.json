{
  "context-menu": {
    "atom-text-editor": [
      {
        "label": "Compile and Run",
        "command": "gpp-compiler:compile"
      },
      {
        "label": "Compile and Debug",
        "command": "gpp-compiler:gdb"
      },
      {
        "label": "Make",
        "command": "gpp-compiler:make"
      }
    ],
    ".tree-view .file .name[data-name*=\".c\"]": [
      {
        "label": "Compile and Run",
        "command": "gpp-compiler:tree-compile"
      },
      {
        "label": "Compile and Debug",
        "command": "gpp-compiler:tree-gdb"
      }
    ],
    ".tree-view .file .name[data-name=Makefile]": [
      {
        "label": "Make",
        "command": "gpp-compiler:make"
      }
    ]
  }
}
